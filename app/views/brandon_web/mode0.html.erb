<%= form_tag("generate", method: "post", multipart: true) do %>
<%= label_tag('files[]', "Images:") %>
<%= file_field_tag('files[]', multiple: true) %> <br/>
<%= label_tag(:filename, "Generated filename:") %>
<%= text_field_tag(:filename) %><br/><br/>

<%= label_tag(:split, "Treat each image separately:") %>
<%= check_box_tag(:split) %><br/>
<%= label_tag(:start, "Starting palette index:") %>
<%= number_field_tag(:start, nil, min: 1, max: 255) %><br/>
<%= label_tag(:palette, "Restrict number of palette entries:") %>
<%= number_field_tag(:palette, nil, min: 1, max: 255) %><br/><br/>


<%= label_tag(:resize_width, "Resize Width:") %>
<%= number_field_tag(:resize_width, nil, min: -1, max: 512) %>
<%= label_tag(:resize_height, "Resize Height:") %>
<%= number_field_tag(:resize_height, nil, min: -1, max: 512) %><br/><br/>

<%= label_tag(:animated, "Animated:") %>
<%= check_box_tag(:animated) %><br/><br/>

<%= label_tag(:colorkeyd, "Colorkey image:") %>
<%= check_box_tag(:colorkeyd) %><br/>
<%= label_tag(:transparent, "Transparent Color:") %>
<%= color_field_tag(:transparent) %><br/><br/>
<%= submit_tag("Convert") %>
<input type="hidden" name="mode" value="mode0" />
<% end %>
